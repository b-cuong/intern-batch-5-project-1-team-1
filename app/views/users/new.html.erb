<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h1>
            <%= t(".sigup") %></h1>
        </div>
        <div class="card-body">
          <%= form_for(@user, url: signup_path) do |f| %>
          <form action="SignÂ up">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group row">
                  <%= f.label t(".full_name"), class: 'col-md-3 col-form-label text-md-right' %>
                  <div class="col-md-8">
                    <%= f.text_field :full_name, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row">
                  <%= f.label t(".email") , class: 'col-md-3 col-form-label text-md-right' %>
                  <div class="col-md-8">
                    <%= f.email_field :email, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row">
                  <%= f.label t(".password") , class: 'col-md-3 col-form-label text-md-right' %>
                  <div class="col-md-8">
                    <%= f.password_field :password, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row">
                  <%= f.label t(".password_digest"), class: 'col-md-3 col-form-label text-md-right' %>
                  <div class="col-md-8">
                    <%= f.password_field :password_confirmation, class: 'form-control' %>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <%= f.label t(".gender") , class: 'col-md-3 col-form-label text-md-right' %>
                  <div class="col-md-8">
                    <%= f.text_field :gender, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row">
                  <%= f.label t(".dob"), class: 'col-md-3 col-form-label text-md-right' %>
                  <div class="col-md-8">
                    <%= f.text_field :dob, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row">
                  <%= f.label t(".phone"), class: 'col-md-3 col-form-label text-md-right' %>
                  <div class="col-md-8">
                    <%= f.text_field :phone, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row">
                  <%= f.label t(".address"), class: 'col-md-3 col-form-label text-md-right' %>
                  <div class="col-md-8">
                    <%= f.text_field :address, class: 'form-control' %>
                  </div>
                </div>
              </div>
              <div class="form-group row mb-0">
                <div class="col-md-6 offset-md-5">
                  <%= f.submit t(".sigup"), class: 'col-md-3 btn btn-primary' %>
                </div>
              </div>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
