<%= form_for(@major) do |f| %>
  <div class="form-group ">
    <%= f.label t('.name'), class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <%= fields_for(@major_character) do |mc| %>
  <div class="field">
      <%= mc.label t('.description') %>
      <%= collection_select(:characters, :id, Character.all, :id, :name, {}, {:multiple => true}) %>
    </div>
  <% end %>
  <div class="form-group rows">
    <%= f.submit t(".create_new"), class: 'col-md-4 btn btn-primary btn-md' %>
    <%= link_to t(".back"), majors_path, class: 'btn btn-danger btn-md'  %>
  </div>
<% end %>
